{
  "name": "micro-journal-ai",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "description": "A minimalist AI-powered journaling web app with mood detection and personalized insights",
  "author": "Darshil",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/darshil0/micro-journal-ai.git"
  },
  "bugs": {
    "url": "https://github.com/darshil0/micro-journal-ai/issues"
  },
  "homepage": "https://github.com/darshil0/micro-journal-ai#readme",
  "keywords": [
    "journal",
    "journaling",
    "ai",
    "mental-health",
    "reflection",
    "mindfulness",
    "mood-tracking",
    "claude",
    "anthropic",
    "react",
    "vite",
    "tailwindcss"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"node server.js\" \"vite\"",
    "start": "node server.js",
    "build": "vite build",
    "preview": "vite preview",
    "postinstall": "npm run build",
    "lint": "eslint src --ext .js,.jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css}\""
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "lucide-react": "^0.263.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.0.1",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.16",
    "vite": "^5.4.11",
    "concurrently": "^8.2.0"
  }
